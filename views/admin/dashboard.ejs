<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

    
</head>
<body class="center">



    <nav class="navbar bg-light">
        <div class="container-fluid">
          <!-- <a class="navbar-brand">Navbar</a> -->
          <a href="/admin/home" class="btn btn-outline-primary btn-lg"  tabindex="-1" role="button" aria-disabled="true">Home</a>

            <a href="/admin/new-user" class="btn btn-outline-success" tabindex="-1" role="button" aria-disabled="true">Add User</a>
          <form class="d-flex" role="search">
            <input class="form-control me-2" type="search" name="search" placeholder="Search name, email" aria-label="Search">
            <button class="btn btn-outline-success" type="submit">Search</button>

          
          </form>
        </div>
      </nav>

  

    <h1 class="center2">
        Admin Dashboard
    </h1>

<table class="center1" width="50%">
    <tr>
        <th>USERNAME</th>
        <th>EMAIL</th>
        <th>VERIFIED</th>
        <th>EDIT</th>
        <th>DELETE</th>
    </tr>

    <%

    if(users.length > 0){

        for(let i=0;i<users.length;i++){
            %>
            <tr>
                <td><%= users[i].name %></td>
                <td><%= users[i].email %></td>
                <td><%
                    if(users[i].is_varified == 0){

                        %>
                        <p>Not Verified</p>
                        <%

                    }
                    else{
                        %>
                        <p>Verified</p>
                        <%

                    }
                    
                    %></td>
                    <td>
                        <a class="btn btn-info" href="/admin/edit-user?id=<%= users[i]._id %>">Edit</a>
                        
                    </td>
                    <td>
                        <a class="btn btn-danger" href="/admin/delete-user?id=<%= users[i]._id %>">Delete</a>
                    </td>
            </tr>

            <%

        }
    }
        else{
            %>
            <tr>
                <td colspan="5">Users not found</td>
            </tr>

            <%
         }
 %>


</table>


<style>
    table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
      
    
    }
    
    td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
      padding-left: 30px;
      padding-top: 20px;
    }
    
    tr:nth-child(even) {
      background-color: #dddddd;
    }
    .center2{
        padding-left: 500px;

    }
    </style>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js" integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk" crossorigin="anonymous"></script>

</body>
</html>

